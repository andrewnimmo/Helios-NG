#ifndef __cats_pub_h
#define __cats_pub_h

#define PRIVATE static
#define PUBLIC

#if defined(__HELIOS__)
#pragma -s0  /* Enable stack checking */
#endif

#if defined(__C40)

#define FALSE   0
#define TRUE    1
#ifndef NULL
#define NULL    ((void *)0)
#endif

typedef unsigned short DATASAMPLE;   /* 16 bits */
#ifndef __CATSUTIL_H__
typedef unsigned short WORD16;       /* 16 bits */
typedef unsigned long  WORD32;       /* 32 bits */
typedef int BOOL;
#endif
typedef unsigned long  LONG;         /* 32 bits */
typedef long TIME; /* A time during the shot, in æS */

#define BIN_00  0
#define BIN_01  1
#define BIN_10  2
#define BIN_11  3
#define BIN_111 7

#define STACK_SIZE 1024

#include "catsutil.h"
#include "cats_c40.h"

#endif /*__C40*/

#endif /* __cats_pub_h */
