#ifdef lint
static char sccsid[] = "@@(#)getstr.c	5.3 (Berkeley) 6/30/88";
#endif /* not lint */

# include	"curses.ext"

/*
 *	This routine gets a string starting at (_cury,_curx)
 *
 */
int wgetstr(
	    reg WINDOW	*win, 
	    reg char	*str )
{
	while ((*str = wgetch(win)) != ERR && *str != '\n')
		str++;
	if (*str == ERR) {
		*str = '\0';
		return ERR;
	}
	*str = '\0';
	return OK;
}
